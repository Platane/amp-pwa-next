{
  "compilerOptions": {
    "strict": true,
    "jsx": "preserve",
    "lib": ["dom", "es2020"],
    "target": "es6",
    "module": "esnext",
    "isolatedModules": true,
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "next.config.js"]
}
